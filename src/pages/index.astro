---
import GitHubIcon from '../components/GitHubIcon.astro';
import HireBadge from '../components/HireBadge.astro';
import LinkChip from '../components/LinkChip.astro';
import LinkedInIcon from '../components/LinkedInIcon.astro';
import SpotifyIcon from '../components/SpotifyIcon.astro';
import Layout from '../layouts/Layout.astro';
import Header from '../sections/Header.astro';
import Timeline from '../sections/Timeline.astro';
import ClockIcon from '../components/ClockIcon.astro';
import PencilIcon from '../components/PencilIcon.astro';
import Projects from '../sections/Projects.astro';
import MusicIcon from '../components/MusicIcon.astro';
import Songs from '../sections/Songs.astro';
import Footer from '../sections/Footer.astro';
---

<Layout title="Esalu Portfolio - Web developer and music composer" desc="Esalu is a web developer and music composer from Mexico. He is passionate about creating beautiful and harmonious things.">
	<div style="background-color: #0e1212;
	opacity: 1;
	background-image:  radial-gradient(#3B4B4B 0.8500000000000001px, transparent 0.8500000000000001px), radial-gradient(#3B4B4B 0.8500000000000001px, #0e1212 0.8500000000000001px);
	background-size: 34px 34px;
	background-position: 0 0,17px 17px;">
	<div class="flex flex-col items-center">
		<main class="py-8 max-w-[900px]">
			<Header/>
			<section class="py-32 md:px-32 px-10">
				<div class="md:inline-flex gap-2 items-center pb-4 flex-row-reverse">
					<HireBadge>Available for hire</HireBadge>
					<h1 class="text-4xl font-bold mt-2">Hello, I'm <span class="text-esalu-green-400">Esalu</span></h1>
				</div>
				<p class="text-lg text-balance">Passionate <b class="text-esalu-green-100">front-end developer</b> and harmonious <i class="text-woodsmoke-100">music composer</i> hailing from <span class="text-green-500">MÃ©</span>xi<span class="text-red-500">co</span>.</p>
				<div class="mt-5">
					<LinkChip link='https://github.com/esalu-dev'><GitHubIcon/></LinkChip>
					<LinkChip link='https://github.com/esalu-dev'><LinkedInIcon/></LinkChip>
					<LinkChip link='https://github.com/esalu-dev'><SpotifyIcon/></LinkChip>
				</div>
			</section>
			<section id="experience" class="pt-4 pb-28 md:px-32 px-10">
				<h2 class="text-2xl mb-2 font-semibold flex items-center gap-2"><ClockIcon/>Experience</h2>
				<p class="mb-5 text-woodsmoke-100 font-Onest">Diverse Projects, One Passion</p>
				<Timeline/>

			</section>
			<section id="projects" class="pt-4 pb-32 md:px-32 px-10">
				<h2 class="text-2xl mb-2 font-semibold flex items-center gap-2"><PencilIcon/>Projects</h2>
				<p class="mb-5 text-woodsmoke-100 font-Onest">From Concept to Code</p>

				<Projects/>
			</section>
			<section id="music" class="pt-4 pb-32 md:px-32 ">
				<div class="bg-woodsmoke-dark-500 p-10 md:rounded-xl">
					<h2 class="text-2xl mb-2 font-semibold flex items-center gap-2 font-Onest"><MusicIcon/>My Music</h2>
					<p class="mb-5 text-woodsmoke-100 font-Onest">Melodies from the Heart <3</p>

					<Songs/>

				</div>
			
			</section>
			<Footer/>
		</main>
	</div>
	
	</div>
	
</Layout>

